<div id="main">
  <div id="tab2">

    <br/>
    <%= link_to image_tag("/images/back.gif", :border => "0", :size => "30x30", :alt => "Back to Bucket List"), 
      account_abuckets_path(@account) %>&nbsp
    <% if Rbucket.find_all_by_abucket_id(@abucket.id).size < 1 and Tbucket.find_all_by_abucket_id(@abucket.id).size < 1 %>
      <%= link_to image_tag("/images/delete2.gif", :border => "0", :size => "30x30", :alt => "Delete Bucket"), 
        [@account, @abucket], :confirm => 'Are you sure you want to delete this bucket?', :method => :delete %>&nbsp
    <% end %>
    <%= render :partial => '/helppages/help_button_link' %>

    <div class="body">
      
      <h3>Account: <span class="head1"><%=h @account.name %></span></h3>
      <h2>Edit Bucket</h2>

      <%= error_messages_for :abucket %>
      
      <fieldset>

        <% form_for([@account, @abucket]) do |f| %>
          <p>
            <b>Bucket Name:</b><br />
            <%= f.text_field :name, :size => 40 %>
          </p>
          <p>
            <%= f.submit 'Update' %>
          </p>
        <% end %>
        
        <script language="JavaScript"> document.forms[0].abucket_name.select(); </script>
        <script language="JavaScript"> document.forms[0].abucket_name.focus(); </script>
        
      </fieldset>

    </div>
  
  </div>
</div>