<div id="main">
  <div id="tab2">

    <br/>
    <%= link_to image_tag("/images/back.gif", :border => "0", :size => "30x30", :alt => "Back to Bucket List"), 
      account_abuckets_path(@account) %>&nbsp
    <%= render :partial => '/helppages/help_button_link' %>

    <div class="body">
      
      <h3>Account: <span class="head1"><%=h @account.name %></span></h3>
      <h2>New Buckets</h2>

      <%= error_messages_for :abucket %>
    
      <div id="left">
        <fieldset>
          <% form_for([@account, @abucket]) do |f| %>
            <p>
              <b>Bucket Name:</b><br />
              <%= f.text_field :name, :size => 40 %>
            </p>
            <p>
              <%= f.submit 'Create' %>
            </p>
          <% end %>
          
          <script language="JavaScript"> document.forms[0].abucket_name.focus(); </script>
        
        </fieldset>
      </div>
      <div id="right">
        <% if @unassigned_buckets.size > 0 %>
          <div style="float:left">
          <% form_tag(abucket_add_abucket_path(@account)) do %>
            <div class="list2" style="width:341px">
              <table class="list" border="1" cellpadding="3">
                <tr class="header">
                  <th class="name">Unassigned Bucket Name</th>
                  <th class="type">Add</th>
                </tr>
              </table>
            </div>
            <div class="list2" style="width:341px">
              <table class="list" border="1" cellpadding="3">
                <%= render :partial => 'abucket', :collection => @unassigned_buckets %>
              </table>
            </div>
            <br />
            <%= submit_tag "Add Checked Buckets" %>
          <% end %>
          </div>
        <% else %>
          <p>All buckets are assigned.</p>
        <% end %>
      </div>

    </div>
  
  </div>
</div>
