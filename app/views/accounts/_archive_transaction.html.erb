<% if archive_transaction.description != 'Balance Forward' %>
  <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
    <td class="date"><%=h archive_transaction.tran_date.strftime("%m-%d-%Y") %></td>
    <% if archive_transaction.doc_number != nil and archive_transaction.doc_number != '' %>
      <td class="type"><%=h archive_transaction.doc_number %></td>
    <% else %>
      <td class="type">&nbsp</td>
    <% end %>
    <td class="name"><%=h archive_transaction.description %></td>
    <% if archive_transaction.wamount != 0 and archive_transaction.wamount != nil %>
      <td class="currency"><%= number_to_currency(archive_transaction.wamount) %></td>
    <% else %>
      <td class="currency">&nbsp</th>
    <% end %>
    <% if archive_transaction.damount != 0 and archive_transaction.damount != nil %>
      <td class="currency"><%= number_to_currency(archive_transaction.damount) %></td>
    <% else %>
      <td class="currency">&nbsp</td>
    <% end %>
    <% if archive_transaction.tran_date < (Time.now - (Time.now.day - 1).days - 1.months).to_date %>
      <td class="date"><%= check_box_tag "transactions[]", archive_transaction.id, true %></td>
    <% else %>
      <td class="date"><%= check_box_tag "transactions[]", archive_transaction.id, false %></td>
    <% end %>
  </tr>
<% end %>
