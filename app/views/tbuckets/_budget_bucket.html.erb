<tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
  <td class="name"><%=h @account.abuckets.find(budget_bucket.abucket_id).name %></td>
  <% balance = @transaction.get_bucket_balance(@account,budget_bucket.abucket_id) %>
  <% if balance != 0 %>
    <td class="currency"><%=h number_to_currency(balance) %></td>
  <% else %>
    <td class="currency">&nbsp</td>
  <% end %>
</tr>
